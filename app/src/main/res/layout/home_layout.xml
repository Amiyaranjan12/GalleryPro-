<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Activity"
    android:id="@+id/draw_navig_layout"
    tools:openDrawer="end"

    >



    <com.google.android.material.navigation.NavigationView

        android:id="@+id/navig_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:itemTextColor="@color/purple_500"

        android:background="@color/main_background"
        android:layout_gravity="start"
        app:headerLayout="@layout/navig_header"
        app:menu="@menu/navig_menu"
        >
    </com.google.android.material.navigation.NavigationView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="63dp"
            app:cardElevation="7dp">


            <LinearLayout
                android:background="@drawable/headingsrc_design"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/navig_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:elevation="7dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/ic_baseline_menu_24" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/search_box"
                    app:cardElevation="17dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="23dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="11dp"
                            android:src="@drawable/ic_baseline_search_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginLeft="9dp"
                            android:text="Search here....."/>


                    </LinearLayout>



                </androidx.cardview.widget.CardView>







            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="#f1f1f1"
                    android:id="@+id/ImageRecyclerView"
                    android:nestedScrollingEnabled="false"/>

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/recyclerPBar"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>




    </LinearLayout>









</androidx.drawerlayout.widget.DrawerLayout>